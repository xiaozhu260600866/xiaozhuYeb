<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxx.server.mapper.SysMsgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xxx.server.pojo.SysMsg">
        <id column="id" property="id" />
        <result column="mid" property="mid" />
        <result column="type" property="type" />
        <result column="adminid" property="adminid" />
        <result column="state" property="state" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, mid, type, adminid, state
    </sql>
    <resultMap id="getAll" type="com.xxx.server.pojo.SysMsg" extends="BaseResultMap">
        <collection property="sysMsgContent" ofType="com.xxx.server.pojo.SysMsgContent" autoMapping="true"></collection>
    </resultMap>
    <select id="getAll" resultMap="getAll">
        SELECT
            t.*,
            tc.*
        FROM
            t_sys_msg t
                LEFT JOIN
            t_sys_msg_content tc
            on t.mid = tc.id
    </select>

</mapper>
